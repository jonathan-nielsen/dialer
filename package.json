{
	"name": "monte-rosa",
	"version": "0.0.1",
	"description": "Monte Rosa - Translation tool",
	"main": "src/server.js",
	"scripts": {
		"babel-node": "babel-node --presets=env",
		"start": "NODE_PATH=src nodemon --watch src/ --exec npm run babel-node -- ./src/server.js",
		"build": "babel src -d dist",
		"mocha": "mocha --compilers js:babel-register",
		"test": "NODE_PATH=src mocha --require babel-register --require babel-polyfill --exit ./test/**/*.js"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-plugin-wildcard": "^4.0.0",
		"babel-preset-env": "^1.6.1",
		"chai": "^4.1.2",
		"eslint": "^4.19.1",
		"mocha": "^5.0.5",
		"nodemon": "^1.17.2",
		"supertest": "^3.0.0"
	},
	"babel": {
		"presets": [
			"env"
		],
		"plugins": [
			"wildcard"
		]
	},
	"dependencies": {
		"bcrypt": "^2.0.0",
		"body-parser": "^1.18.2",
		"connect-flash": "^0.1.1",
		"connect-mongo": "^2.0.1",
		"cookie-parser": "^1.4.3",
		"cors": "^2.8.4",
		"debug": "^3.1.0",
		"dotenv": "^5.0.1",
		"express": "^4.16.3",
		"express-session": "^1.15.6",
		"joi": "^13.2.0",
		"mongoose": "^5.0.11",
		"mongoose-unique-validator": "^2.0.0",
		"react": "^16.3.2",
		"react-dom": "^16.3.2",
		"socket.io": "^2.1.0",
		"twilio": "^3.15.1"
	}
}
